<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main_color"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/liner_acy_detail_whole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.yuanding.schoolpass.view.refreshtools.SimpleSwipeRefreshLayout
            android:id="@+id/demo_swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:scrollbars="vertical" >

            <com.yuanding.schoolpass.view.refreshtools.PullToRefreshListView
                android:id="@+id/lv_act_detail_comment"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/col_account_bg"
                android:dividerHeight="0dp"
                android:fadingEdge="none"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="false"
                android:listSelector="@color/transparent"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:scrollingCache="false" 
                android:layout_marginBottom="@dimen/space_10"
                >
            </com.yuanding.schoolpass.view.refreshtools.PullToRefreshListView>
        </com.yuanding.schoolpass.view.refreshtools.SimpleSwipeRefreshLayout>

        <!-- 底部 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#CCCCCC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_55"
            android:background="@color/main_tool_bg"
            android:gravity="center_vertical" >

            <LinearLayout
                android:id="@+id/liner_acy_comment_send"
                android:layout_width="@dimen/space_50"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/iv_acy_comment_send"
                    android:layout_width="@dimen/space_29"
                    android:layout_height="@dimen/space_32"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_comment_send_enable"
                    android:scaleType="fitXY" />
            </LinearLayout>

            <EditText
                android:id="@+id/tv_acy_detail_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/liner_acy_comment_send"
                android:hint="写评论"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textSize="17sp" />
        </RelativeLayout>
    </LinearLayout>
    <!-- 底部结束 -->


    <!-- 加载失败 -->

    <include
        android:id="@+id/side_acy_detail_load_error"
        layout="@layout/pub_read_faile"
        android:visibility="gone" />

    <!-- 加载中 -->

    <include
        android:id="@+id/side_acy_detail_loading"
        layout="@layout/pub_read_loading" />

</LinearLayout>