<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" 
   
    
    >

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp" >

        <com.yuanding.schoolpass.view.CircleImageView
            android:id="@+id/iv_contact_por"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tv_item_check_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/attence_sign_leave"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="3dp"
            android:text="迟到" 
            android:textColor="@color/white"
            android:textSize="11sp"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_item_check_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="和申"
        android:textColor="@color/start_title_col"
        android:gravity="center_horizontal"
         />
<LinearLayout 
    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
    >
     <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="偏离:"
        android:textColor="@color/title_no_focus_login"
        android:textSize="10sp" />

      <TextView
          android:id="@+id/tv_item_check_meter"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="无回应"
          android:textColor="@color/title_no_focus_login"
          android:textSize="10sp" />

</LinearLayout>
   

</LinearLayout>