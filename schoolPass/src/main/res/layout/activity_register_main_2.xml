<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none" > 
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/bg_main_color"
	    android:focusable="true"
	    android:focusableInTouchMode="true"
	    android:orientation="vertical" >
	    <LinearLayout
	        android:id="@+id/liner_select_school_temp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/space_31"
	        android:layout_marginRight="@dimen/space_31"
	        android:layout_marginTop="@dimen/space_33"
	        android:background="@drawable/login_input_normal_bg"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
		    <TextView 
		        android:id="@+id/et_select_your_school"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:background="@null"
			    android:layout_marginLeft="@dimen/space_4"
			    android:textSize="@dimen/sp_17"
			    android:textColor="#333333"
			    android:hint="选择你的学校"
			    android:textColorHint="#999999"
			    android:inputType="number"
			    android:paddingTop="@dimen/space_5"
			    android:paddingBottom="@dimen/space_5"
			    android:singleLine="true"/>
	    </LinearLayout>
	    <Button 
	        android:id="@+id/btn_complete_registration"
	        android:layout_marginTop="@dimen/space_10"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/btn_login_disabled"
	        android:layout_marginLeft="@dimen/space_20"
	        android:layout_marginRight="@dimen/space_20" 
	        android:text="完成注册"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/sp_20"/>
	</LinearLayout>
</ScrollView> 