<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="276dp"
    android:layout_height="wrap_content"
    android:gravity="center" >
 <LinearLayout
	android:layout_width="276dp"
	android:layout_height="wrap_content"
	android:orientation="vertical">
  <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/space_20"
	android:background="@drawable/general_dialog_top_bg"
	android:orientation="vertical">
    <LinearLayout
        android:id="@+id/li_general_dialog"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="14dp" >

        <TextView
            android:id="@+id/dialog_title_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_5"
            android:gravity="center"
            android:text="确定发送给："
            android:textColor="#666666"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <com.yuanding.schoolpass.view.CircleImageView
            android:id="@+id/re_photo"
           android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:minHeight="50dp"
            android:minWidth="50dp" />

        <TextView
            android:id="@+id/tv_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:gravity="left|center_vertical"
            android:textColor="#666666"
            android:textSize="17sp" />
    </LinearLayout>
 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_left_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#999999"
            android:background="@drawable/general_dialog_left_btn_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_middle_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:visibility="gone"
            android:textColor="#999999"
            android:background="@drawable/general_dialog_bottom_btn_bg"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_right_button"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:textColor="#999999"
            android:background="@drawable/general_dialog_right_btn_bg"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>