<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >
        <com.yuanding.schoolpass.view.CircleImageView
            android:id="@+id/iv_friend_por"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/space_4"/>

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/space_4"
            android:gravity="center_horizontal"
            android:textSize="@dimen/space_13"
            android:textColor="#666666" 
            android:singleLine="true"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/iv_select_friend"
            android:layout_width="@dimen/space_18"
            android:layout_height="@dimen/space_18"
            android:adjustViewBounds="true"
            android:background="@drawable/register_box_unselected"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>