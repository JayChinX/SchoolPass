<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:background="@drawable/info_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/space_8"
        android:paddingLeft="@dimen/space_18"
        android:paddingRight="@dimen/space_18"
        android:paddingTop="@dimen/space_8" >

        <LinearLayout
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/space_11"
            android:layout_marginRight="@dimen/space_23"
            android:layout_marginTop="@dimen/space_19"
            android:layout_toLeftOf="@+id/iv_side_info"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_side_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="中大肆哦哈发就发可个你发"
                android:textColor="#000000"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/tv_side_info_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_7"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="中大肆哦哈讽德诵功发就的可个的就个发大煞风景房贷款过的发你就可个你发的可"
                android:textColor="#999999"
                android:textSize="@dimen/sp_13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp" >

                <TextView
                    android:id="@+id/tv_side_info_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_5"
                 android:textColor="#999999"
                    android:textSize="@dimen/space_13" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_side_info_surname_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/space_5"
                        android:clickable="true"
                        android:drawableLeft="@drawable/icon_notice_detail_read"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:text="  51"
                        android:textColor="#999999"
                        android:textSize="@dimen/space_13" />

                    <TextView
                        android:id="@+id/tv_side_info_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_25"
                        android:clickable="true"
                        android:drawableLeft="@drawable/icon_notice_detail_repaly"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:text="  51"
                         android:textColor="#999999"
                        android:textSize="@dimen/space_13" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_side_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/space_13"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginBottom="@dimen/space_1"
        android:background="#CCCCCC" />

</LinearLayout>