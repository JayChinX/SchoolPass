<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/liner_whole_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:visibility="gone">
       <ListView
            android:id="@+id/lv_message_idnex_list_rong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:cacheColorHint="@color/transparent"
            android:divider="#CCCCCC"
            android:dividerHeight="0.4dp"
            android:fadingEdge="none"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none"/>

    </LinearLayout>
    <!-- 加载失败 -->
    <include
        android:id="@+id/mess_index_acy_load_error"
        layout="@layout/pub_read_faile"
        android:visibility="gone" />
    
    <!-- 加载中 -->
    <include
        android:id="@+id/mess_index_acy_loading"
        layout="@layout/pub_read_loading"
        />
</LinearLayout>